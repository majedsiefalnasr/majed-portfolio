{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.org/BreadcrumbList",
  "title": "BreadcrumbList Schema (Navigation)",
  "description": "Schema.org BreadcrumbList type for hierarchical navigation breadcrumbs",
  "type": "object",
  "required": ["@context", "@type", "itemListElement"],
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org",
      "description": "Schema.org context"
    },
    "@type": {
      "type": "string",
      "const": "BreadcrumbList",
      "description": "Schema type for breadcrumb navigation"
    },
    "itemListElement": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["@type", "position", "name"],
        "properties": {
          "@type": {
            "type": "string",
            "const": "ListItem"
          },
          "position": {
            "type": "integer",
            "minimum": 1,
            "description": "1-based index indicating the position in the breadcrumb trail"
          },
          "name": {
            "type": "string",
            "description": "Display text for the breadcrumb link"
          },
          "item": {
            "type": "string",
            "format": "uri",
            "description": "URL of the breadcrumb item (omit for the current page, which is the last item)"
          }
        }
      },
      "description": "Ordered list of breadcrumb items from homepage to current page"
    }
  },
  "examples": [
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://majedsiefalnasr.dev"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Blog",
          "item": "https://majedsiefalnasr.dev/blog"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "Building a Scalable API with Nuxt 4"
        }
      ]
    },
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://majedsiefalnasr.dev"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Case Studies",
          "item": "https://majedsiefalnasr.dev/case-studies"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "E-commerce Platform Redesign"
        }
      ]
    }
  ]
}
